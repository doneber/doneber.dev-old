---
const {
  title,
  img,
  desc,
  url,
  repo_url,
  blog_url,
  badge,
  tags,
  target = "_blank",
} = Astro.props;
---

<div
  class="rounded-lg bg-base-100 shadow-md hover:shadow-xl transition ease-in-out hover:scale-[101%]"
>
  <a href={blog_url? blog_url: url} target={target}>
    <div class="flex-col items-start">
      {
        img && (
          <div class="relative">
            <svg class="icon-outsite absolute top-2 right-2" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" ><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"> <path d="M3 3V2.5H2.5V3H3ZM12.6464 13.3536C12.8417 13.5488 13.1583 13.5488 13.3536 13.3536C13.5488 13.1583 13.5488 12.8417 13.3536 12.6464L12.6464 13.3536ZM3.5 11V3H2.5V11H3.5ZM3 3.5H11V2.5H3V3.5ZM2.64645 3.35355L12.6464 13.3536L13.3536 12.6464L3.35355 2.64645L2.64645 3.35355Z" fill="gray"></path> <path d="M4 15V15C4 16.8692 4 17.8038 4.40192 18.5C4.66523 18.9561 5.04394 19.3348 5.5 19.5981C6.19615 20 7.13077 20 9 20H14C16.8284 20 18.2426 20 19.1213 19.1213C20 18.2426 20 16.8284 20 14V9C20 7.13077 20 6.19615 19.5981 5.5C19.3348 5.04394 18.9561 4.66523 18.5 4.40192C17.8038 4 16.8692 4 15 4V4" stroke="gray" stroke-linecap="round"></path> </g></svg>
            <img
            src={img}
            width="100%"
            height="100%"
            alt={title}
            class="max-w-full rounded-sm"
            />
          </div>
        )
      }
      <div class="grow m-4">
        <h1 class="text-xl font-bold">
          {title}
          {badge && <div class="badge badge-secondary mx-2">{badge}</div>}
        </h1>
        <p class="py-1 text-1xl">{desc}</p>
        <div class="card-actions justify-end">
          {
            tags &&
              tags.map((tag) => <div class="badge badge-outline">{tag}</div>)
          }
        </div>
      </div>
    </div>
  </a>
</div>
<style>
  .icon-insite {
    width: 18px;
    height: 18px;
    transform: scale(1, -1);
}
</style>