---
const {
  title,
  img,
  desc,
  url,
  repo_url,
  blog_url,
  badge,
  tags,
  target = "_blank",
} = Astro.props;
---

<div
  class="rounded-lg bg-base-100 shadow-md hover:shadow-xl transition ease-in-out hover:scale-[101%]"
>
  <a href={blog_url? blog_url: url} target={target}>
    <div class="hero-content flex-col items-start">
      {
        img && (
            <img
            src={img}
            alt={title}
            class="max-w-full rounded-md border"
            />
        )
      }
      <div class="grow">
        <h1 class="text-xl font-bold">
          {title}
          {badge && <div class="badge badge-secondary mx-2">{badge}</div>}
        </h1>
        <p class="py-1 text-1xl">{desc}</p>
        <div class="card-actions justify-end">
          {
            tags &&
              tags.map((tag) => <div class="badge badge-outline">{tag}</div>)
          }
        </div>
      </div>
    </div>
  </a>
</div>
<style>
  .icon-insite {
    width: 18px;
    height: 18px;
    transform: scale(1, -1);
}
</style>